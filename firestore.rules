rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regra para a coleção 'clients'
    // Permite que administradores leiam a lista de clientes e documentos individuais.
    // Permite que clientes autenticados leiam apenas seu próprio documento.
    match /clients/{clientId} {
      allow read: if request.auth != null && (request.auth.token.admin == true || request.auth.uid == clientId);
      
      // Apenas administradores (via Cloud Functions) podem criar ou atualizar álbuns.
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

  }
}